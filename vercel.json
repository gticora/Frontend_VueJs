{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "env": {
    "VITE_API_URL": "https://your-api-server-url.com/api"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://your-api-server-url.com/api/$1" }
  ]
}